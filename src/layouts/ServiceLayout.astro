---
import contactData from '../data/contact.json'; 

// Default bgImage if none is provided
const { title, subtitle, bgImage = "/images/uploads/hero-bg.jpg" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title ? `${title} | ` : ''} TSB Constructions</title>
  </head>
  <body class="bg-slate-50 text-slate-900 font-sans antialiased flex flex-col min-h-screen">
    
    <nav class="fixed top-0 w-full z-50 bg-slate-900/90 backdrop-blur-md border-b border-white/10 p-4 md:p-6 flex justify-between items-center transition-all duration-300">
        <a href="/" class="flex items-center gap-3 z-50 group no-underline">
            <img src="/images/logo.jpg" alt="TSB Constructions" class="h-12 w-auto object-contain rounded-full" />
            <div class="flex flex-col">
                <span class="text-lg md:text-2xl font-bold tracking-widest text-[#FF9933] uppercase leading-none">
                    TSB <span class="text-white">CONSTRUCTIONS</span>
                </span>
            </div>
        </a>

        <div class="hidden md:flex gap-8 text-sm font-medium tracking-wide text-gray-300">
            <a href="/#services" class="hover:text-green-400 transition">SERVICES</a>
            <a href="/projects" class="hover:text-green-400 transition">PROJECTS</a>
            <a href="/contact" class="hover:text-green-400 transition">CONTACT</a>
        </div>

        <button id="layout-menu-btn" class="md:hidden text-white focus:outline-none z-50">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
        </button>
    </nav>

    <div id="layout-mobile-menu" class="fixed inset-0 bg-slate-950/95 z-40 transform translate-x-full transition-transform duration-300 ease-in-out flex flex-col justify-center items-center gap-8 md:hidden text-white">
        <a href="/#services" class="mobile-link text-2xl font-bold hover:text-green-400">SERVICES</a>
        <a href="/projects" class="mobile-link text-2xl font-bold hover:text-green-400">PROJECTS</a>
        <a href="/contact" class="mobile-link text-2xl font-bold hover:text-green-400">CONTACT</a>
    </div>

    {title && (
        <header class="relative h-[50vh] flex items-center justify-center overflow-hidden">
            <div class="absolute inset-0 z-0">
                <img src={bgImage} class="w-full h-full object-cover opacity-90" alt={title} />
                <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/40 to-transparent"></div>
            </div>
            <div class="z-10 text-center mt-20 px-4">
                <h1 class="text-4xl md:text-6xl font-bold mb-4 text-white">{title}</h1>
                <p class="text-lg md:text-xl text-green-400 max-w-2xl mx-auto">{subtitle}</p>
            </div>
        </header>
    )}

    <main class="flex-grow">
        <slot /> 
    </main>

    <footer class="relative z-20 bg-white text-slate-800 pt-10 md:pt-16 pb-8 border-t border-gray-200">
        <div class="max-w-7xl mx-auto px-6 grid grid-cols-2 md:grid-cols-3 gap-8 md:gap-8">

            <div>
                <h4 class="text-orange-600 font-bold mb-4 md:mb-6 text-lg">Address</h4>
                <ul class="space-y-3 text-sm font-medium text-gray-600 mb-6">
                     <li class="flex gap-2">
                        <span>{contactData.address}</span>
                    </li>
                    <li class="flex gap-2">
                        <span>{contactData.phone}</span>
                    </li>
                    <li class="flex gap-2">
                        <span>{contactData.email}</span>
                    </li>
                </ul>
                <div class="flex gap-4">
                    {contactData.socials?.facebook && (
                        <a href={contactData.socials.facebook} target="_blank" class="text-gray-400 hover:text-[#1877F2] transition"><svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg></a>
                    )}
                    {contactData.socials?.instagram && (
                        <a href={contactData.socials.instagram} target="_blank" class="text-gray-400 hover:text-[#E4405F] transition"><svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg></a>
                    )}
                </div>
            </div>

        </div>
        
        <div class="max-w-7xl mx-auto px-6 mt-12 pt-8 border-t border-gray-100 flex flex-col md:flex-row justify-between text-xs text-gray-500">
            <p>&copy; 2024 TSB Constructions and Developers. All rights reserved.</p>
            <p>{contactData.address} | {contactData.phone}</p>
        </div>
    </footer>

    <a href={`https://wa.me/${contactData.whatsapp}`} target="_blank" class="fixed bottom-6 right-6 z-40 bg-[#25D366] hover:bg-[#128C7E] text-white p-4 rounded-full shadow-2xl transition-transform hover:scale-110 flex items-center justify-center group">
        <svg class="w-8 h-8 fill-current" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></svg>
    </a>

    <script>
        const btn = document.getElementById('layout-menu-btn');
        const menu = document.getElementById('layout-mobile-menu');
        const links = document.querySelectorAll('.mobile-link');
        if(btn && menu) {
            btn.addEventListener('click', () => {
                menu.classList.toggle('translate-x-full');
                menu.classList.toggle('translate-x-0');
            });
            links.forEach(link => {
                link.addEventListener('click', () => {
                    menu.classList.add('translate-x-full');
                    menu.classList.remove('translate-x-0');
                });
            });
        }
    </script>
  </body>
</html>