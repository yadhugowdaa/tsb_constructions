---
import ServiceLayout from '../layouts/ServiceLayout.astro';
import homeData from '../data/homepage.json';
import { getCollection } from 'astro:content';

// Fetch Sustainability Posts
const sustainabilityPosts = await getCollection('sustainability');

// --- CUSTOM ICONS FOR THE 6 IMPACT POINTS ---
// --- CUSTOM ICONS FOR CONSTRUCTION ---
const statIcons = [
  // 1. Designs Delivered (Drafting Tools)
  `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"></path></svg>`,
  // 2. Quality Assurance (Shield/Check)
  `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`,
  // 3. PMC Projects (Helmet/Building)
  `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path></svg>`,
  // 4. Years of Trust (Handshake/Star)
  `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path></svg>`,
  // 5. ISO Certified (Badge/Certificate)
  `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>`,
  // 6. Client Support (Headset/Phone)
  `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path></svg>`
];

const iconColors = [
  "text-orange-600", 
  "text-blue-600",  
  "text-orange-500",  
  "text-yellow-500",
  "text-green-600",
  "text-orange-600" 
];
---

<ServiceLayout title="" subtitle="" bgImage="">
    
    <div class="fixed top-0 left-0 w-full h-screen z-0">
         <img src="/hero section.jpg" class="w-full h-full object-cover object-[center_70%]" alt="Hero Background">
         <div class="absolute inset-0 bg-black/50"></div>
         <div class="absolute inset-0 flex flex-col justify-center items-center text-center px-6 pb-32">
             <h1 class="text-4xl md:text-7xl font-bold text-white mb-4 md:mb-6 drop-shadow-xl leading-tight">
                 {homeData.hero.title}
             </h1>
             <p class="text-gray-100 text-lg md:text-2xl max-w-2xl mx-auto drop-shadow-md font-medium">
                 {homeData.hero.subtitle}
             </p>
         </div>
    </div>

    <div class="relative z-10 bg-white mt-[85vh] shadow-[0_-20px_60px_rgba(0,0,0,0.7)] rounded-t-[2.5rem]">
        
        <section class="py-16 md:py-20 px-6 max-w-7xl mx-auto">
            <div class="flex items-center gap-4 mb-10">
                <div class="w-1 h-10 md:h-12 bg-orange-600"></div>
                <h2 class="text-2xl md:text-3xl text-slate-800 font-normal">Building <span class="font-bold">Excellence & Trust</span></h2>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
                {homeData.stats.map((stat, index) => (
                    <div class="flex items-center gap-6 p-6 rounded-2xl bg-slate-50 border border-slate-100 hover:shadow-lg transition group">
                        <div 
                            class={`p-3 bg-white rounded-full shadow-sm group-hover:scale-110 transition duration-300 ${iconColors[index % iconColors.length]}`}
                            set:html={statIcons[index % statIcons.length]}
                        ></div>
                        <div>
                            <h3 class="text-3xl font-bold text-slate-900">{stat.number}</h3>
                            <p class="text-slate-500 text-xs font-bold uppercase tracking-wider mt-1">{stat.label}</p>
                        </div>
                    </div>
                ))}
            </div>
        </section>

        <section id="services" class="py-16 md:py-24 bg-slate-900 text-white">
            <div class="max-w-7xl mx-auto px-4">
                <div class="flex items-center gap-4 mb-8 md:mb-12 px-2">
                    <div class="w-1 h-10 md:h-12 bg-orange-600"></div>
                    <h2 class="text-2xl md:text-3xl font-normal">Our <span class="font-bold text-orange-400">Services</span></h2>
                </div>
                <div class="flex flex-row overflow-x-auto snap-x snap-mandatory gap-4 w-full h-[400px] px-2 pb-4 md:overflow-visible md:h-[500px] md:items-stretch md:justify-center md:gap-3">
                    <div class="card group snap-center shrink-0 w-[85vw] md:w-auto md:shrink">
                        <img src="/images/uploads/2d-3d-hero.jpg" alt="2D & 3D Design" class="card-bg">
                        <div class="card-content">
                            <h3 class="text-2xl font-bold uppercase drop-shadow-lg">2D & 3D Design</h3>
                            <p class="description">Architectural Planning & Modeling.</p>
                        </div>
                    </div>
                    <div class="card group snap-center shrink-0 w-[85vw] md:w-auto md:shrink">
                        <img src="/images/uploads/elevation-hero.jpg" alt="ARC Elevation" class="card-bg">
                        <div class="card-content">
                            <h3 class="text-2xl font-bold uppercase drop-shadow-lg">ARC Elevation</h3>
                            <p class="description">Stunning Exterior Designs.</p>
                        </div>
                    </div>
                    <div class="card group snap-center shrink-0 w-[85vw] md:w-auto md:shrink">
                        <img src="/images/uploads/stability-hero.jpg" alt="Stability Cert" class="card-bg">
                        <div class="card-content">
                            <h3 class="text-2xl font-bold uppercase drop-shadow-lg">Stability Cert</h3>
                            <p class="description">Structural Safety & Audit.</p>
                        </div>
                    </div>
                    <div class="card group snap-center shrink-0 w-[85vw] md:w-auto md:shrink">
                        <img src="/images/uploads/pmc-hero.jpg" alt="PMC" class="card-bg">
                        <div class="card-content">
                            <h3 class="text-2xl font-bold uppercase drop-shadow-lg">PMC</h3>
                            <p class="description">Project Management Consultancy.</p>
                        </div>
                    </div>
                     <div class="card group snap-center shrink-0 w-[85vw] md:w-auto md:shrink">
                        <img src="/images/uploads/estimation-hero.jpg" alt="Estimation" class="card-bg">
                        <div class="card-content">
                            <h3 class="text-2xl font-bold uppercase drop-shadow-lg">Estimation</h3>
                            <p class="description">Costing & BOQ.</p>
                        </div>
                    </div>
                    <div class="card group snap-center shrink-0 w-[85vw] md:w-auto md:shrink">
                        <img src="/images/uploads/real-estate-hero.jpg" alt="Real Estate" class="card-bg">
                        <div class="card-content">
                            <h3 class="text-2xl font-bold uppercase drop-shadow-lg">Real Estate</h3>
                            <p class="description">Consultancy & Development.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="py-16 md:py-20 bg-slate-50">
            <div class="max-w-7xl mx-auto px-6">
                <div class="flex items-center gap-4 mb-10">
                    <div class="w-1 h-10 md:h-12 bg-blue-600"></div>
                    <h2 class="text-2xl md:text-3xl text-slate-800 font-normal">Message From <span class="font-bold">Leadership</span></h2>
                </div>

                <div class="bg-white p-8 rounded-3xl shadow-lg border border-slate-100 flex flex-col md:flex-row gap-8 items-center">
                    <div class="shrink-0">
                        <img src={homeData.leader.image} class="w-40 h-40 md:w-48 md:h-48 rounded-full object-cover border-4 border-slate-50 shadow-md" alt="Founder">
                    </div>
                    <div class="text-center md:text-left">
                        <h3 class="text-2xl md:text-3xl font-bold text-blue-900">{homeData.leader.name}</h3>
                        <p class="text-sm text-slate-500 font-bold uppercase tracking-wider mb-4">{homeData.leader.role}</p>
                        
                        <div class="relative">
                            <span class="absolute -top-4 -left-2 text-6xl text-slate-200 font-serif">"</span>
                            <p class="text-slate-600 text-lg italic leading-relaxed relative z-10 px-4">
                                {homeData.leader.message}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section id="sustainability" class="py-16 md:py-20 px-6 max-w-7xl mx-auto">
             <div class="flex items-center gap-4 mb-10">
                <div class="w-1 h-10 md:h-12 bg-blue-600"></div>
                <h2 class="text-2xl md:text-3xl text-slate-800 font-normal">Sustainability <span class="font-bold">& Us</span></h2>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                {sustainabilityPosts.map((item) => (
                    <div class="relative group block overflow-hidden rounded-2xl h-[250px] md:h-[400px] shadow-md hover:shadow-xl transition-all duration-500 hover:-translate-y-2">
                        <img src={item.data.coverImage} class="w-full h-full object-cover transition duration-700 group-hover:scale-110" alt={item.data.title}>
                        <div class="absolute inset-0 bg-gradient-to-t from-slate-900/90 via-slate-900/50 to-transparent flex flex-col justify-end p-6 md:p-8">
                            <h3 class="text-white text-xl md:text-2xl font-bold mb-2 group-hover:text-green-400 transition">{item.data.title}</h3>
                            <p class="text-white/70 text-sm font-bold opacity-0 group-hover:opacity-100 transition translate-y-4 group-hover:translate-y-0 flex items-center gap-1">
                                Read More <span>â†’</span>
                            </p>
                        </div>
                    </div>
                ))}
            </div>
        </section>

    </div> 

</ServiceLayout>

<style>
    #services::-webkit-scrollbar { display: none; }
    #services { -ms-overflow-style: none; scrollbar-width: none; }
    .card { position: relative; border-radius: 1.5rem; overflow: hidden; transition: flex 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94); will-change: flex; transform: translateZ(0); height: 100%; }
    @media (min-width: 768px) { .card { flex: 1; min-width: 60px; height: auto; } .card:hover { flex: 5; } }
    .card-bg { position: absolute; inset: 0; width: 100%; height: 100%; object-fit: cover; transition: transform 0.5s ease, filter 0.5s ease; will-change: transform; filter: brightness(0.6); }
    .card:hover .card-bg { transform: scale(1.1); filter: brightness(0.8); }
    .card-content { position: absolute; bottom: 20px; left: 20px; right: 20px; z-index: 20; pointer-events: none; }
    .description { font-size: 0.9rem; margin-top: 0.5rem; color: #cbd5e1; transition: all 0.3s ease; }
    @media (max-width: 767px) { .description { opacity: 1; height: auto; } }
    @media (min-width: 768px) { .description { opacity: 0; height: 0; overflow: hidden; } .card:hover .description { opacity: 1; height: auto; } }
</style>