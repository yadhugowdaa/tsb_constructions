---
import ServiceLayout from '../layouts/ServiceLayout.astro';
import aboutData from '../data/about.json';
---

<ServiceLayout title="About Us" subtitle="" bgImage={aboutData.image}>
    
    <div class="max-w-4xl mx-auto px-6 py-16">
        
        <h2 class="text-3xl md:text-5xl font-bold text-slate-900 mb-8">{aboutData.title}</h2>
        
        <div class="prose prose-lg text-slate-600 mb-16 whitespace-pre-line">
            {aboutData.story}
        </div>

        <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-green-50 p-8 rounded-2xl border border-green-100">
                <h3 class="text-2xl font-bold text-green-800 mb-4">Our Vision</h3>
                <p class="text-slate-700">{aboutData.vision}</p>
            </div>
            <div class="bg-blue-50 p-8 rounded-2xl border border-blue-100">
                <h3 class="text-2xl font-bold text-blue-800 mb-4">Our Mission</h3>
                <p class="text-slate-700">{aboutData.mission}</p>
            </div>
        </div>

    </div>
</ServiceLayout>