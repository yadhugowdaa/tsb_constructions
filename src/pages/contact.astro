---
import ServiceLayout from '../layouts/ServiceLayout.astro';
import contactData from '../data/contact.json';

const pageTitle = "Contact Us";
---

<ServiceLayout title={pageTitle} subtitle="Get in touch with us for sustainable energy solutions.">
  
  <div class="max-w-7xl mx-auto px-6 py-16 md:py-24">
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-20">
      
      <div>
        <h2 class="text-3xl font-bold text-slate-900 mb-8">Get In Touch</h2>
        <p class="text-gray-600 mb-10 text-lg leading-relaxed">
          We are here to help you switch to green energy. Reach out to us for solar installations, transmission line works, or agricultural solutions.
        </p>

        <div class="space-y-8">
          <div class="flex items-start gap-4">
            <div class="bg-green-100 p-3 rounded-full text-green-600 mt-1">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
            </div>
            <div>
              <h3 class="font-bold text-slate-900 text-lg">Head Office</h3>
              <p class="text-gray-600 mt-1 max-w-xs">{contactData.address}</p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div class="bg-green-100 p-3 rounded-full text-green-600 mt-1">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
            </div>
            <div>
              <h3 class="font-bold text-slate-900 text-lg">Phone</h3>
              <p class="text-gray-600 mt-1">
                <a href={`tel:${contactData.phone}`} class="hover:text-green-600 transition">{contactData.phone}</a>
              </p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div class="bg-green-100 p-3 rounded-full text-green-600 mt-1">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
            </div>
            <div>
              <h3 class="font-bold text-slate-900 text-lg">Email</h3>
              <p class="text-gray-600 mt-1">
                <a href={`mailto:${contactData.email}`} class="hover:text-green-600 transition">{contactData.email}</a>
              </p>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-slate-100 rounded-3xl overflow-hidden shadow-lg h-[400px] md:h-auto min-h-[400px]">
        <div class="w-full h-full" set:html={contactData.map_embed} />
      </div>

    </div>
  </div>

</ServiceLayout>