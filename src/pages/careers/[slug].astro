<ServiceLayout title="Careers" subtitle="Job Details" bgImage="/images/hero-bg.jpg">
    <div class="max-w-4xl mx-auto px-6 py-16">
        
        <div class="bg-white p-8 rounded-2xl shadow-lg border border-slate-100 mb-8">
            <h1 class="text-3xl font-bold text-slate-900 mb-2">{entry.data.title}</h1>
            <div class="flex flex-wrap gap-4 text-slate-600 mb-6 text-sm font-medium">
                <span class="bg-slate-100 px-3 py-1 rounded-full">ğŸ“ {entry.data.location}</span>
                <span class="bg-green-100 text-green-700 px-3 py-1 rounded-full">ğŸ’¼ {entry.data.type}</span>
                <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full">ğŸ“… Posted: {entry.data.date.toDateString()}</span>
            </div>
            
            <div class="prose prose-lg text-slate-600 max-w-none border-t border-slate-100 pt-6">
                <Content />
            </div>
        </div>

